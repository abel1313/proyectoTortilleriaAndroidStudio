<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleSplash" parent="Theme.Tortilleria_salida">
        <item name="android:windowBackground">@drawable/splahstrece</item>
    </style>
    <style name="styleButton">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="android:textSize">8dp</item>
    </style>

    <style name="styleButtonAccesi">
        <item name="backgroundTint">@color/colorButtonAcceso</item>
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="styleCard">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/nameTextCard</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorLetra</item>
    </style>

    <style name="styleTexto">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorLetra</item>
    </style>

    <style name="styleEditText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="styleTextLoginBienvenido">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="styleTextLoginUsuario">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorLetra</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styleEditLoginUsuario">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

<style name="styleTextIntroduccion">
    <item name="android:text">@string/introduccionSistema</item>
    <item name="android:textStyle">bold</item>

</style>

</resources>