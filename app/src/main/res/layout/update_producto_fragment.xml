<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.producto.update.UpdateProductoFragment">


    <androidx.cardview.widget.CardView

        android:layout_width="300dp"
        android:layout_height="250dp"
        android:backgroundTint="#84B0C1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15sp"
        app:cardElevation="3dp">

        <TextView
            style="@style/styleTextInformacionPantalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/textDescripcionUpdate" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:text="@string/textUpdate"
           style="@style/styleTextInformacion"
            />

        <EditText
            style="@style/styleEditInformacion"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/adamina"
            android:hint="Ingrese nuevo numero"
            android:inputType="numberDecimal"/>


        <Button
            style="@style/styleButtonUpdateProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:fontFamily="@font/ribeye"

            />

        <Button
            android:id="@+id/btnSalir"
            style="@style/styleButtonUpdateProductoSalir"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="170dp"
            android:layout_marginTop="215dp"
            android:fontFamily="@font/ribeye"
            android:shadowColor="@color/colorLetra"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3" />

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>